.flex {
  display: flex;
}
/* 居中 */
.flexCentered {
  justify-content: center;
}
/* 垂直 */
.flexVertical {
  align-items: center;
}
.flexFirst {
  flex-grow: 0;
}
.flexCenter {
  flex-grow: 1;
}
.flexLast {
  flex-grow: 0;
}
.flexLevel {
  flex: 1;
}
.content {
  padding-top: 20rpx;
}
.order {
  background: white;
  margin-bottom: 20rpx;
}
.order:last-child {
  margin-bottom: 0;
}
.order .orderNum {
  padding: 28rpx 23rpx;
  border-bottom: 1rpx solid #EDEDED;
  display: flex;
  align-items: center;
}
.order .orderNum .num {
  color: #1D3646;
  font-size: 20rpx;
  flex-grow: 1;
}
.order .orderNum .orderState {
  font-size: 24rpx;
  color: #FD4912;
  flex-grow: 0;
}
.order .orderdetails {
  border-bottom: 1rpx solid #EDEDED;
}
.order .orderdetails .prodetails {
  padding: 40rpx 23rpx;
  display: flex;
}
.order .orderdetails .prodetails .proLogo {
  flex-grow: 1;
}
.order .orderdetails .prodetails .proLogo view {
  border: 1rpx solid #EDEDED;
  font-size: 0;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.order .orderdetails .prodetails .proLogo view:last-child {
  margin-right: 0;
}
.order .orderdetails .prodetails .proLogo view image {
  width: 100%;
  height: 100%;
}
.order .orderdetails .prodetails .promoney {
  flex-grow: 0;
}
.order .orderdetails .prodetails .promoney .money {
  font-size: 28rpx;
  color: #FD4912;
}
.order .orderdetails .prodetails .promoney .pronum {
  padding-top: 21rpx;
  font-size: 20rpx;
  color: #A5AAAD;
}
.order .orderdetails .orderDesc {
  padding: 0 23rpx 40rpx;
}
.order .orderdetails .orderDesc view {
  padding: 20rpx;
  background: #F8F8F8;
  border-bottom: 1rpx solid white;
  font-size: 24rpx;
  color: #849098;
  display: flex;
}
.order .orderdetails .orderDesc view:last-child {
  border-bottom: none;
}
.order .orderdetails .orderDesc view .type {
  flex-grow: 0;
}
.order .orderdetails .orderDesc view .desc {
  flex-grow: 1;
  padding-left: 23rpx;
  color: #1D3646;
}
.order .orderdetails .orderDesc view .state {
  flex-grow: 0;
}
.order .orderdate {
  padding: 12rpx 23rpx;
  display: flex;
  align-items: center;
}
.order .orderdate .date {
  flex-grow: 1;
  font-size: 20rpx;
  color: #849098;
}
.order .orderdate .button {
  flex-grow: 0;
  font-size: 0;
}
.order .orderdate .button button {
  background: #0CD37C;
  height: 56rpx;
  font-size: 24rpx;
  color: #FFFFFF;
}
