.flex {
  display: flex;
}
/* 居中 */
.flexCentered {
  justify-content: center;
}
/* 垂直 */
.flexVertical {
  align-items: center;
}
.flexFirst {
  flex-grow: 0;
}
.flexCenter {
  flex-grow: 1;
}
.flexLast {
  flex-grow: 0;
}
.flexLevel {
  flex: 1;
}
.lang {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
view {
  font-size: 30rpx;
  color: #333333;
}
.searchContainer {
  background: #EDEDED;
  padding: 18rpx 40rpx;
}
.searchContainer .searchContent {
  background: white;
  border-radius: 32rpx;
  padding: 0 35rpx;
}
.searchContainer .searchContent input {
  height: 64rpx;
  font-size: 30rpx;
  width: 100%;
  color: #333333;
}
.classificationContainer {
  position: relative;
}
