<view>
    <view class="receiptInfo">
        <view class="receipInfoContainer flex flexVertical">
            <image class="ic_more" src="../../../../assets/images/shoppingCart/ic_more.png"></image>
            <view class="icon flexLast">
                <image src="../../../../assets/images/shoppingCart/ic_add_1.png"></image>
            </view>
            <view class="flexCenter receipInfoContent">
                <view class="userInfo">
                    <view class="userName">
                        收货人：张三
