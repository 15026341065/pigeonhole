                             <view class="center moneyColor">￥0.05</view>
                         </i-col>
                         <i-col span="4" i-class="col-class">
                             <view class="center">10和</view>
                         </i-col>
                         <i-col span="4" i-class="col-class">
                             <view class="center moneyColor">￥230.0</view>
                         </i-col>
                     </i-row>
                     <view class="totalPrice">
                         <view class="num">gong5</view>
                         <view class="money">

                         </view>
                     </view>
                 </view>
             </view>
         </view>
    </view>
