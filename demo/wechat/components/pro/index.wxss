.flex {
  display: flex;
}
/* 居中 */
.flexCentered {
  justify-content: center;
}
/* 垂直 */
.flexVertical {
  align-items: center;
}
.flexFirst {
  flex-grow: 0;
}
.flexCenter {
  flex-grow: 1;
}
.flexLast {
  flex-grow: 0;
}
.flexLevel {
  flex: 1;
}
.lang {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.recommendedBrand {
  font-size: 0;
}
.recommendedBrandContainer {
  display: flex;
  flex-wrap: wrap;
  background: #F8F8F8;
}
.recommendedBrandContainer .recommendedBrandConttent {
  width: 50%;
}
.recommendedBrandContainer .recommendedBrandConttent .brand {
  padding-bottom: 45rpx;
  margin-right: 10rpx;
}
.recommendedBrandContainer .recommendedBrandConttent .brand .proDesc {
  padding: 20rpx 20rpx 0;
}
.recommendedBrandContainer .recommendedBrandConttent .brand .proDesc .proName {
  font-size: 24rpx;
  color: #333333;
}
.recommendedBrandContainer .recommendedBrandConttent .brand .proDesc .brandName {
  font-size: 24rpx;
  color: #999999;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.recommendedBrandContainer .recommendedBrandConttent .brand .proDesc .proDetails {
  padding-bottom: 15rpx;
}
.recommendedBrandContainer .recommendedBrandConttent .brand .proDesc .proDetails text {
  display: block;
  font-size: 24rpx;
  color: #999999;
}
.recommendedBrandContainer .recommendedBrandConttent .brand .proDesc .proDetails text:last-child {
  width: 40%;
}
.recommendedBrandContainer .recommendedBrandConttent .brand .proDesc .proDetails text:first-child {
  width: 60%;
}
.recommendedBrandContainer .recommendedBrandConttent .brand .proDesc .proShopping .proPrice .price {
  font-size: 28rpx;
  color: #FD4912;
}
.recommendedBrandContainer .recommendedBrandConttent .brand .proDesc .proShopping .proPrice .company {
  font-size: 20rpx;
  color: #A5AAAD;
}
.recommendedBrandContainer .recommendedBrandConttent .brand .proDesc .proShopping .addPro {
  font-size: 0;
}
.recommendedBrandContainer .recommendedBrandConttent .brand .proDesc .proShopping .addPro image {
  width: 48rpx;
  height: 48rpx;
}
.recommendedBrandContainer .recommendedBrandConttent:nth-child(even) .brand {
  margin-right: 0;
}
.recommendedBrand .brandPro {
  font-size: 0;
  border-radius: 10rpx;
  overflow: hidden;
  background: white;
}
.recommendedBrand .brandPro image {
  width: 100%;
  height: 350rpx;
}
